<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.unloadarr.unloadarr.menuActivity"
                android:background="#ff000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Unloadarr"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingTop="50dp"
        android:textColor="@android:color/white"
        android:textSize="75dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/exitMenuButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="#be474747"
        android:clickable="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View entered dates"
        android:id="@+id/viewDateButton"
        android:layout_above="@+id/exitMenuButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="#be474747"
        android:clickable="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter a new date"
        android:id="@+id/enterDateButton"
        android:layout_above="@+id/viewDateButton"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:background="#be474747"
        android:clickable="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check absences"
        android:id="@+id/checkAbButton"
        android:layout_above="@+id/enterDateButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#be474747"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About us"
        android:id="@+id/aboutUsButton"
        android:layout_above="@+id/checkAbButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#be474747"
        android:textColor="@android:color/white"/>
</RelativeLayout>
